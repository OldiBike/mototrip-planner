# Flask Configuration
FLASK_SECRET_KEY=your-secret-key-here-change-in-production
FLASK_ENV=development

# Firebase Configuration
FIREBASE_CREDENTIALS_PATH=path/to/serviceAccountKey.json
# OU utiliser directement le JSON (pour Railway)
# FIREBASE_CREDENTIALS={"type":"service_account","project_id":"..."}

# Firebase App ID
APP_ID=default-app-id

# Stripe Configuration
STRIPE_SECRET_KEY=sk_test_...
STRIPE_WEBHOOK_SECRET=whsec_...

# Database Configuration (PostgreSQL)
DATABASE_URL=postgresql://user:password@localhost:5432/mototrip

# Admin Authentication
ADMIN_USERNAME=admin
ADMIN_PASSWORD_HASH=scrypt:32768:8:1$...

# Google Maps API
GOOGLE_MAPS_API_KEY=your-google-maps-api-key

# Application Settings
PORT=5000

# RateHawk API Configuration (Sandbox)
RATEHAWK_API_KEY_ID=your-ratehawk-key-id
RATEHAWK_API_KEY_TOKEN=your-ratehawk-api-token
RATEHAWK_BASE_URL=https://api-sandbox.worldota.net

# Email Service Configuration
EMAIL_SERVICE=mock
# Options: 'mock' (d√©veloppement), 'sendgrid', 'ses', 'smtp'
EMAIL_FROM=noreply@mototrip.com
EMAIL_FROM_NAME=MotoTrip

# SendGrid (si EMAIL_SERVICE=sendgrid)
SENDGRID_API_KEY=SG.xxx

# AWS SES (si EMAIL_SERVICE=ses)
AWS_REGION=eu-west-1
AWS_ACCESS_KEY_ID=xxx
AWS_SECRET_ACCESS_KEY=xxx

# SMTP (si EMAIL_SERVICE=smtp)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_password

# Application Base URL (pour les liens emails)
BASE_URL=http://localhost:5000
